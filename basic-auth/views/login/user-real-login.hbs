<div id="form">
  <h2>Login</h2>
  <form action="/login/userLogin" method="POST">

    <label> User
      <input type="text" name="username" placeholder="ironhacker" />
    </label>

    <label> Password
      <input type="password" name="password" placeholder="********" />
    </label>

    <button type="submit">Log In</button>

    {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
        {{/if}}
  </form>
</div>
